{
  "manifest_version": 2,
  "name": "TabHideout",
  "version": "0.0.1",
  "description": "Allows user to hide tabs.",
  "background": {
    "persistent": true,
    "scripts": ["bg.js"]
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_title": "TabHideout",
    "default_popup": "popup.html"
  }
}